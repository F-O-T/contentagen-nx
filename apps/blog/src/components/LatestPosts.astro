---
export interface Props {
  posts: Array<{
    slug: string;
    data: {
      title: string;
      description: string;
      pubDate: string | Date;
    };
  }>;
}
const { posts } = Astro.props;
import FormattedDate from "./FormattedDate.astro";
---

<section aria-labelledby="latest-posts-heading" class="py-16 bg-white dark:bg-gray-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 id="latest-posts-heading" class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white mb-8">
      Latest Posts
    </h2>
    <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {posts.length === 0 ? (
        <p class="col-span-full text-gray-500 dark:text-gray-400">No posts found.</p>
      ) : (
        posts.map((post) => (
          <article class="flex flex-col rounded-lg shadow-md bg-gray-50 dark:bg-gray-900 p-6 h-full" aria-labelledby={`post-title-${post.slug}`}>
            <header>
              <h3 id={`post-title-${post.slug}`} class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {post.data.title}
              </h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                <FormattedDate date={post.data.pubDate} />
              </p>
            </header>
            <p class="text-gray-700 dark:text-gray-300 flex-grow">{post.data.description}</p>
            <div class="mt-6">
              <a
                href={`/blog/${post.slug}`}
                class="inline-block text-primary-600 dark:text-primary-400 font-medium hover:underline focus:outline-none focus:ring-2 focus:ring-primary-500 rounded transition"
                aria-label={`Read more: ${post.data.title}`}
              >
                Read more<span class="sr-only"> about {post.data.title}</span>
              </a>
            </div>
          </article>
        ))
      )}
    </div>
  </div>
</section>