---
import { Heart } from "@lucide/astro";
import { navItems } from "../data/navItems";

const year = new Date().getFullYear();
const resources = [
  { href: "#", name: "Documentation" },
  { href: "#", name: "Templates Library" },
  { href: "#", name: "Support" },
];
---

  <footer id="footer" class="snap-start w-full bg-orange-950/50 border-t border-orange-800 py-8">
    <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-2">
      <!-- Enhanced Brand -->
      <div class="md:col-span-2">
        <h3 class="text-3xl md:text-4xl font-black bg-gradient-to-r from-white via-orange-200 to-amber-200 bg-clip-text text-transparent mb-3">
          ✨ Blog Automation Platform
        </h3>
        <p class="text-gray-400 mb-4 leading-relaxed">
          AI-powered content automation for agencies and bloggers. Fast, consistent, and SEO-optimized publishing—customizable workflows and easy export.
        </p>
      </div>

      <!-- Enhanced Quick Links -->
      <div>
        <h4 class="text-white font-bold mb-4 text-lg">Quick Links</h4>
        <ul class="flex flex-col gap-2">
          {navItems.map(link => (
            <li>
              <a href={link.link} class="text-gray-400 hover:text-orange-400 transition-colors hover:translate-x-1 inline-block transition-transform duration-200">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Enhanced Resources -->
      <div>
        <h4 class="text-white font-bold mb-4 text-lg">Resources</h4>
        <ul class="flex flex-col gap-2">
          {resources.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-amber-400 transition-colors hover:translate-x-1 inline-block transition-transform duration-200">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Enhanced Bottom -->
    <div class="border-t border-white/20 mt-8 pt-6 flex flex-col md:flex-row items-center justify-between">
      <p class="text-gray-400">
        © {year} EAR Stack. Made with TypeScript and love.
      </p>
      <div class="flex items-center text-gray-400 mt-4 md:mt-0 gap-2">
        <span>Made with</span> <Heart class="w-4 h-4 text-red-400 fill-red-400 animate-pulse" /> <span>by developers, for developers</span>
      </div>
    </div>
  </div>
    </footer>
