---
import { ArrowRight, Heart } from "@lucide/astro";

const year = new Date().getFullYear();

const productLinks = [
  { href: "#features", name: "Features" },
  { href: "#how-it-works", name: "How It Works" },
  { href: "#use-cases", name: "Use Cases" },
  { href: "#", name: "Pricing" },
  { href: "#", name: "API Documentation" },
];

const resourceLinks = [
  { href: "#", name: "Templates Library" },
  { href: "#", name: "Blog Writing Guide" },
  { href: "#", name: "SEO Best Practices" },
  { href: "#", name: "Support Center" },
  { href: "#", name: "Community" },
];

const bottomLinks = [
  { href: "#", name: "Privacy Policy" },
  { href: "#", name: "Terms of Service" },
  { href: "#", name: "Contact" },
];

function scrollToWaitlist(e) {
  e.preventDefault();
  if (typeof window !== "undefined") {
    document.getElementById("waitlist")?.scrollIntoView({ behavior: "smooth" });
  }
}
---

<footer class="snap-start bg-gray-900 text-white py-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <!-- Main Footer Content -->
      <div class="grid md:grid-cols-4 gap-8 mb-12">
        <!-- Brand Column -->
        <div class="md:col-span-2">
          <div class="mb-6">
            <span class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
              BlogGenius
            </span>
          </div>
          <p class="text-gray-300 mb-6 max-w-md">
            The most advanced AI-powered blog automation platform for content agencies and individual creators.
            Transform your content workflow and save 15+ hours every week.
          </p>
          <button
            onclick={scrollToWaitlist}
            class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 group rounded flex items-center"
            type="button"
          >
            Join Waitlist
            <ArrowRight class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
          </button>
        </div>

        <!-- Product Links -->
        <div>
          <h4 class="font-semibold text-white mb-4">Product</h4>
          <ul class="space-y-2 text-gray-300">
            {productLinks.map(link => (
              <li>
                <a href={link.href} class="hover:text-white transition-colors">{link.name}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Resources Links -->
        <div>
          <h4 class="font-semibold text-white mb-4">Resources</h4>
          <ul class="space-y-2 text-gray-300">
            {resourceLinks.map(link => (
              <li>
                <a href={link.href} class="hover:text-white transition-colors">{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Final CTA Section -->
      <div class="border-t border-gray-800 pt-8 mb-8">
        <div class="text-center">
          <h3 class="text-xl font-bold mb-2">Ready to Transform Your Content Creation?</h3>
          <p class="text-gray-300 mb-4">
            Join thousands of creators who've already secured their early access spot
          </p>
          <button
            onclick={scrollToWaitlist}
            class="border border-purple-600 text-purple-400 hover:bg-purple-600 hover:text-white px-6 py-2 rounded transition-colors"
            type="button"
          >
            Get Early Access Now
          </button>
        </div>
      </div>

      <!-- Bottom Footer -->
      <div class="border-t border-gray-800 pt-8">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          <div class="text-sm text-gray-400">Â© {year} BlogGenius. All rights reserved.</div>
          <div class="flex gap-6 text-sm text-gray-400">
            {bottomLinks.map(link => (
              <a href={link.href} class="hover:text-white transition-colors">{link.name}</a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
