---
// CTABlock.astro – Prominent call to action section
import { ArrowRight, CalendarCheck } from "@lucide/astro";
import { Button } from "@packages/ui/components/button";
---
<section id="start-trial" class="container mx-auto py-16 flex flex-col items-center justify-center gap-6 snap-start">
  <div class="flex flex-col gap-3 items-center text-center">
    <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-orange-400 via-yellow-200 to-orange-400 bg-clip-text text-transparent">
      Ready to Automate Your Blog Content?
    </h2>
    <p class="text-base md:text-lg text-gray-300 max-w-xl mx-auto">
      Start your free trial or book a personalized demo—no credit card required.
    </p>
  </div>
  <div class="flex flex-col md:flex-row gap-4 items-center justify-center mt-4">
    <a href="#" tabindex="0">
      <Button size="lg" className="inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-orange-400 text-white font-semibold rounded-lg shadow-md hover:shadow-lg hover:from-orange-600 hover:to-orange-500 transition-all duration-300">
        <span>Start Free Trial</span>
        <ArrowRight />
      </Button>
    </a>
    <a href="#" tabindex="0">
      <Button variant="outline" size="lg" className="inline-flex items-center gap-2 border-orange-500 text-orange-400 hover:bg-orange-50/10 hover:border-orange-600 transition-all duration-300">
        <CalendarCheck />
        <span>Book a Demo</span>
      </Button>
    </a>
  </div>
</section>

