      <span class="mt-4 font-semibold text-purple-400">[Content Studio]</span>
    </div>
  </div>
  <div class="flex flex-wrap justify-center items-center gap-6 mt-10">
    <!-- Placeholder logos -->
    <div class="w-32 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white text-opacity-70 text-lg font-bold">Agency Logo</div>
    <div class="w-32 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white text-opacity-70 text-lg font-bold">Blogger Logo</div>
    <div class="w-32 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white text-opacity-70 text-lg font-bold">Tool Logo</div>
