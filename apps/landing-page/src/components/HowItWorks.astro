---
// HowItWorksSection.astro – Step-by-step onboarding flow (Astro port of React HowItWorksSection)
import {
  UserPlus,
  Settings,
  FileText,
  Rocket,
  ArrowRight,
  ArrowDown,
} from "@lucide/astro";

const steps = [
  {
    number: "01",
    icon: UserPlus,
    title: "Quick Onboarding",
    description:
      "Sign up and complete our 2-minute setup wizard. Connect your existing tools and platforms for seamless integration.",
    details: [
      "Account setup in under 2 minutes",
      "Platform integrations (WordPress, Medium, etc.)",
      "Team member invitations",
      "Initial preferences configuration",
    ],
  },
  {
    number: "02",
    icon: Settings,
    title: "Configure AI Agents",
    description:
      "Create custom content agents tailored to your brand voice, audience, and content goals. Set tone, keywords, and publishing parameters.",
    details: [
      "Define brand voice and tone",
      "Set target audience parameters",
      "Configure SEO keywords and topics",
      "Establish content guidelines and rules",
    ],
  },
  {
    number: "03",
    icon: FileText,
    title: "Generate & Review Drafts",
    description:
      "Input your content brief and watch as your AI agent creates comprehensive, SEO-optimized blog posts. Review and refine as needed.",
    details: [
      "Simple brief input (topic + requirements)",
      "AI generates full blog post draft",
      "Built-in editing and refinement tools",
      "SEO optimization suggestions",
    ],
  },
  {
    number: "04",
    icon: Rocket,
    title: "Publish & Scale",
    description:
      "Export your content in multiple formats or publish directly to your platforms. Scale your content production effortlessly.",
    details: [
      "Multi-format export (MD, HTML, DOCX)",
      "Direct publishing to platforms",
      "Automated scheduling options",
      "Performance tracking and analytics",
    ],
  },
];
---
<section id="how-it-works" class="snap-start py-10 sm:py-14 md:py-20 bg-gradient-to-br from-gray-50 to-purple-50">
  <div class="container mx-auto px-2 sm:px-4 md:px-6 lg:px-8">
    <div class="text-center mb-10 sm:mb-14 md:mb-16">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        From Setup to Published Post
        <span class="block text-purple-600">in 4 Simple Steps</span>
      </h2>
      <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
        Our streamlined workflow takes you from idea to published blog post faster than you ever thought possible
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col gap-10 md:flex-row md:gap-6 relative">
        {steps.map((step, index) => (
          <div class="relative flex-1 flex flex-col items-center">
            <div
              class="w-full glass-card border border-purple-200/60 bg-gradient-to-br from-white/60 via-purple-50/70 to-white/30 backdrop-blur-md rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 px-4 py-7 md:px-6 md:py-8"
            >
              <div class="flex flex-col items-center">
                {/* Step Number & Icon */}
                <div class="flex flex-col items-center mb-4">
                  <div class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-purple-600 to-pink-600 rounded-2xl flex items-center justify-center mb-2 shadow-md">
                    <step.icon class="w-7 h-7 md:w-8 md:h-8 text-white" />
                  </div>
                  <span class="text-xl md:text-2xl font-bold text-purple-600">{step.number}</span>
                </div>
                {/* Content */}
                <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-2 text-center">{step.title}</h3>
                <p class="text-gray-600 mb-3 text-center leading-relaxed">{step.description}</p>
                <div class="space-y-2 w-full">
                  {step.details.map((detail, detailIndex) => (
                    <div class="flex items-center text-sm text-gray-700">
                      <div class="w-1.5 h-1.5 bg-purple-600 rounded-full mr-3"></div>
                      {detail}
                    </div>
                  ))}
                </div>
              </div>
            </div>
            {/* Connector: horizontal line with dot/arrow, except after last card */}
            {index < steps.length - 1 && (
              <div class="hidden md:block absolute top-1/2 right-0 translate-x-1/2 -translate-y-1/2 w-16 h-0.5 bg-gradient-to-r from-purple-300 via-purple-400 to-pink-300 z-10">
                <div class="absolute -right-4 top-1/2 -translate-y-1/2 w-7 h-7 bg-white rounded-full shadow-lg flex items-center justify-center border border-purple-100">
                  <ArrowRight class="w-4 h-4 text-purple-600" />
                </div>
              </div>
            )}
            {/* Connector: vertical for mobile */}
            {index < steps.length - 1 && (
              <div class="block md:hidden flex flex-col items-center my-3">
                <div class="w-1 h-8 bg-gradient-to-b from-purple-300 via-purple-400 to-pink-300"></div>
                <div class="w-7 h-7 bg-white rounded-full shadow-lg flex items-center justify-center border border-purple-100 mt-[-14px]">
                  <ArrowDown class="w-4 h-4 text-purple-600" />
                </div>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    {/* Seamless Transition CTA */}
    <div class="text-center mt-10 sm:mt-14 md:mt-16">
      <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 max-w-2xl mx-auto">
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-3 sm:mb-4">Ready to Experience This Workflow?</h3>
        <p class="text-gray-600 mb-4 sm:mb-6">
          Join 2,800+ creators who've already streamlined their content creation process
        </p>
        <a href="#waitlist" class="inline-flex items-center justify-center bg-purple-600 hover:bg-purple-700 text-white px-6 sm:px-8 py-3 rounded-lg text-base sm:text-lg font-semibold transition-all group w-full sm:w-auto">
          Get Early Access Now
          <ArrowRight class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
        </a>
        <p class="text-sm text-gray-500 mt-2 sm:mt-3">Skip the line • 50% off first 3 months • Exclusive onboarding</p>
      </div>
    </div>
  </div>
</section>
