---
import { Badge } from "@packages/ui/components/badge";
import { Button } from "@packages/ui/components/button";
import { Icon } from "@packages/ui/components/icon";
import { Input } from "@packages/ui/components/input";
import { Select } from "@packages/ui/components/select";
---

<section class="snap-start pt-10 sm:pt-16 md:pt-20 pb-10 sm:pb-14 md:pb-16 container mx-auto min-h-screen flex flex-col items-center justify-center">
  <div class="w-full text-center px-4 sm:px-6">
    <!-- Announcement Badge -->
    <Badge variant="outline" className="mb-4 sm:mb-6 px-3 sm:px-4 py-1.5 sm:py-2 bg-purple-100 text-purple-700 border-purple-200 inline-flex items-center justify-center text-xs sm:text-sm">
      <Icon name="Sparkles" className="w-4 h-4 mr-2" />
      Early Access Now Available
    </Badge>

    <!-- Main Headline -->
    <h1 class="text-2xl xs:text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 sm:mb-6 leading-tight">
      Automate Your Blog Content
      <span class="bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent block">
        With AI That Learns Your Voice
      </span>
    </h1>

    <!-- Subheadline -->
    <p class="text-base xs:text-lg sm:text-xl text-gray-600 mb-6 sm:mb-8 max-w-3xl mx-auto leading-relaxed">
      Stop struggling with writer's block and inconsistent posting. Create AI-powered content agents that generate
      on-brand blog posts in your unique voiceâ€”saving you 15+ hours per week while maintaining perfect
      consistency.
    </p>

    <!-- Social Proof Stats -->
    <div class="flex flex-col xs:flex-row flex-wrap justify-center gap-4 sm:gap-8 mb-8 sm:mb-12 text-xs xs:text-sm text-gray-600">
      <div class="flex items-center justify-center">
        <Icon name="Users" className="w-5 h-5 mr-2 text-purple-600" />
        <span>
          <strong class="text-gray-900">2,847</strong> creators on waitlist
        </span>
      </div>
      <div class="flex items-center justify-center">
        <Icon name="Clock" className="w-5 h-5 mr-2 text-purple-600" />
        <span>
          <strong class="text-gray-900">15+ hours</strong> saved per week
        </span>
      </div>
      <div class="flex items-center justify-center">
        <Icon name="Target" className="w-5 h-5 mr-2 text-purple-600" />
        <span>
          <strong class="text-gray-900">94%</strong> SEO score average
        </span>
      </div>
    </div>

    <!-- Waitlist Form (static) -->
    <div id="waitlist" class="w-full max-w-xs xs:max-w-sm sm:max-w-md mx-auto">
      <form class="space-y-3 sm:space-y-4">
        <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
          <!-- NOTE: Replace this input with design system Input if available -->
          <Input type="email" placeholder="Enter your email" required className="flex-1 w-full" />
          <Button type="submit" variant="default" className="w-full sm:w-auto">
            Join Waitlist
          </Button>
        </div>

        <!-- NOTE: Replace this select with design system Select if available -->
        <Select>
          <option selected disabled>What describes you best? (Optional)</option>
          <option value="individual-blogger">Individual Blogger</option>
          <option value="marketing-team">Marketing Team</option>
          <option value="freelancer">Freelance Writer</option>
          <option value="business-owner">Business Owner</option>
          <option value="other">Other</option>
        </Select>

        <p class="text-xs sm:text-sm text-gray-500">
          ðŸŽ¯ <strong>Early Access Perk:</strong> Skip the line + 50% off your first 3 months + exclusive onboarding
        </p>
      </form>
      <!--
        To add interactivity later, use Astro Islands or hydrate this form with a client-side framework.
      -->
    </div>

    <!-- Trust Indicators -->
    <div class="mt-8 sm:mt-12 flex flex-col xs:flex-row flex-wrap justify-center items-center gap-4 sm:gap-8 opacity-60">
      <span class="text-xs sm:text-sm text-gray-500">Trusted by teams at:</span>
      <div class="flex items-center gap-4 sm:gap-6">
        <div class="h-8 w-20 bg-gray-200 rounded flex items-center justify-center text-xs font-medium">
          TechCorp
        </div>
        <div class="h-8 w-20 bg-gray-200 rounded flex items-center justify-center text-xs font-medium">
          StartupXYZ
        </div>
        <div class="h-8 w-20 bg-gray-200 rounded flex items-center justify-center text-xs font-medium">
          AgencyPro
        </div>
      </div>
    </div>
  </div>
</section>
