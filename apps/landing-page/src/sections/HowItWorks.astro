---
import { Badge } from "@packages/ui/components/badge";
import {
  Card,
  CardTitle,
  CardDescription,
  CardHeader,
  CardContent,
} from "@packages/ui/components/card";
import { UserPlus, Settings, Sparkles, Rocket } from "@lucide/astro";

interface FeatureStep {
  title: string;
  description: string;
  details: string[];
  icon: any;
}

const steps: FeatureStep[] = [
  {
    title: "Quick Onboarding",
    description:
      "Sign up and complete our 2-minute setup wizard. Connect your existing tools and platforms for seamless integration.",
    details: [
      "Account setup in under 2 minutes",
      "Platform integrations (WordPress, Medium, etc.)",
      "Team member invitations",
      "Initial preferences configuration",
    ],
    icon: UserPlus,
  },
  {
    title: "Configure AI Agents",
    description:
      "Create custom content agents tailored to your brand voice, audience, and content goals.",
    details: [
      "Define brand voice and tone",
      "Set target audience parameters",
      "Configure SEO keywords and topics",
      "Establish content guidelines and rules",
    ],
    icon: Settings,
  },
  {
    title: "Generate & Review Drafts",
    description:
      "Input your content brief and watch as your AI agent creates comprehensive, SEO-optimized blog posts.",
    details: [
      "Simple brief input (topic + requirements)",
      "AI generates full blog post draft",
      "Built-in editing and refinement tools",
      "SEO optimization suggestions",
    ],
    icon: Sparkles,
  },
  {
    title: "Publish & Scale",
    description:
      "Export your content in multiple formats or publish directly to your platforms. Scale your content production effortlessly.",
    details: [
      "Multi-format export (MD, HTML, DOCX)",
      "Direct publishing to platforms",
      "Automated scheduling options",
      "Performance tracking and analytics",
    ],
    icon: Rocket,
  },
];
---

<section class="bg-muted/50 py-24">
  <div class="mx-auto w-full max-w-5xl px-6">
    <div class="text-center mb-16">
      <span class="text-primary font-medium">How It Works</span>
      <h2 class="text-foreground mt-4 text-4xl font-semibold">
        From Setup to Published Post in 4 Simple Steps
      </h2>
      <p class="text-muted-foreground mb-12 mt-4 text-lg">
        Our streamlined workflow takes you from idea to published blog post faster
        than you ever thought possible.
      </p>
    </div>
    <div class="space-y-12">
      {steps.map((step, idx) => {
        const Icon = step.icon;
        const isEven = idx % 2 === 0;
        return (
          <div class={`grid sm:grid-cols-5 sm:gap-8 items-center`.trim()}>
            <div class={`sm:col-span-2 flex items-center justify-center ${!isEven ? 'sm:order-2' : ''}`}>
              <div class="bg-gradient-to-br from-primary/10 to-secondary/10 rounded-full h-32 w-32 flex items-center justify-center">
                <Icon class="text-primary size-16" />
              </div>
            </div>
            <div class={`mt-8 sm:mt-0 sm:col-span-3 ${!isEven ? 'sm:order-1 sm:border-r sm:pr-12' : 'sm:border-l sm:pl-12'}`.trim()}>
              <div class="flex items-center gap-3 mb-2">
                <Icon class="text-primary size-7" />
                <h3 class="text-foreground text-xl font-semibold">
                  {step.title}
                </h3>
              </div>
              <p class="text-muted-foreground mt-2 text-lg">
                {step.description}
              </p>
              <ul class="list-disc list-inside space-y-1 text-left mt-4">
                {step.details.map((detail) => (
                  <li>{detail}</li>
                ))}
              </ul>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
