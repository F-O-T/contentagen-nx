---

<section class="container mx-auto px-4 py-8 flex justify-start items-center  space-x-4">


			<p class="text-muted-foreground text-lg">Trusted by teams at :</p>
			<div class="flex items-center justify-center gap-4">
				{_partners.map((partner) => (
					<div class="flex">
						<a
							href={partner.url}
							target="_blank"
							rel="noopener noreferrer"
							aria-label={`Visit ${partner.alt} website (opens in new tab)`}
						>
				<Picture
          formats={['webp']}
          loading={"lazy"}
								class="h-10 w-10"
								src={partner.logo}
								alt={`${partner.alt} - Partner company logo`}
							/>
						</a>
					</div>
				))}
			</div>


</section>
