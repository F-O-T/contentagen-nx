---
import {
   Brain,
   Users,
   Search,
   Sparkles,
   Play,
   TrendingUp,
   Layout,
   Target,
   CalendarCheck,
} from "@lucide/astro";
import { Image } from "astro:assets";
import cardImage from "../assets/dark/dark-hero.webp";
---

<section class="py-24 bg-muted">
  <div class="mx-auto w-full max-w-5xl px-6">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      <div class="bg-card text-card-foreground col-span-full overflow-hidden border shadow-sm pl-6 pt-6">
        <Layout class="text-primary size-5" />
        <h3 class="text-foreground mt-5 text-lg font-semibold">Competitor Intelligence</h3>
        <p class="text-muted-foreground mt-3 max-w-xl text-balance">Turn competitor strategies into your content advantage with AI-powered competitive analysis.</p>
        <div class="mask-b-from-95% -ml-2 -mt-2 mr-0.5 pl-2 pt-2">
          <div class="bg-background rounded-tl-(--radius) ring-foreground/5 relative mx-auto mt-8 h-96 overflow-hidden border border-transparent shadow ring-1">
            <Image
              src={cardImage}
              alt="Competitor intelligence dashboard"
              class="object-top-left h-full w-full object-cover"
            width={1207}
            height={929}

            />
          </div>
        </div>
      </div>
      
      <div class="bg-card text-card-foreground rounded-xl border py-6 shadow-sm p-6">
        <Target class="text-primary size-5" />
        <h3 class="text-foreground mt-5 text-lg font-semibold">Strategic Analysis</h3>
        <p class="text-muted-foreground mt-3 text-balance">Analyze competitor content strategies to identify market gaps and opportunities.</p>
      </div>

      <div class="bg-card text-card-foreground rounded-xl border py-6 shadow-sm p-6">
        <CalendarCheck class="text-primary size-5" />
        <h3 class="text-foreground mt-5 text-lg font-semibold">Content Planning</h3>
        <p class="text-muted-foreground mt-3 text-balance">Generate data-driven content ideas that outperform competitors in search rankings.</p>
      </div>
      
      <div class="bg-card text-card-foreground rounded-xl border py-6 shadow-sm p-6">
        <Sparkles class="text-primary size-5" />
        <h3 class="text-foreground mt-5 text-lg font-semibold">AI-Powered Insights</h3>
        <p class="text-muted-foreground mt-3 text-balance">Get actionable recommendations to improve your content strategy and dominate SERPs.</p>
      </div>
    </div>
  </div>
</section>
