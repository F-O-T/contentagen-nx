---
import {
   BookOpenCheck,
   Brain,
   ListChecks,
   MessageCircle,
   Settings,
   Shield,
   Users,
} from "@lucide/astro";

// No props needed for this feature section

const _topCards = [
   {
      description:
         "Each AI agent is tailored to your workflow, brand voice, and audience. Define tone, topics, SEO keywords, and formatting for every agent in your content team.",
      title: "Truly Custom Agents",
      type: "customizable",
   },
   {
      description:
         "Each agent’s settings and content are securely separated, so you can manage multiple clients or projects with confidence.",
      icon: Shield,
      iconClass: "m-auto size-8 text-primary",
      iconWrapperClass:
         "relative mx-auto flex aspect-square size-32 rounded-full border before:absolute before:-inset-2 before:rounded-full before:border dark:border-white/10 dark:before:border-white/5",
      title: "Private & Isolated Profiles",
      type: "icon",
   },
   {
      description:
         "Step-by-step tutorials and ready-made templates help you launch new agents for any niche or project in minutes.",
      icon: BookOpenCheck,
      iconClass: "mx-auto size-12 text-primary",
      iconWrapperClass: "pt-6 lg:px-6",
      title: "Fast Agent Onboarding",
      type: "icon",
   },
];

const _bottomCards = [
   {
      left: {
         description:
            "Create, manage, and deploy multiple AI agents—each with their own expertise, voice, and content pipeline. Scale your content operation like a true editorial team.",
         icon: Users,
         iconClass:
            "relative flex aspect-square size-12 rounded-full border before:absolute before:-inset-2 before:rounded-full before:border dark:border-white/10 dark:before:border-white/10",
         title: "Your AI Content Team",
      },
      right: {
         dots: true,
         icon: Brain,
         iconClass: "mx-auto size-10 text-muted-foreground",
         wrapperClass:
            "rounded-tl-(--radius) relative -mb-6 -mr-6 mt-6 h-fit border-l border-t p-6 py-6 sm:ml-6",
      },
   },
   {
      left: {
         description:
            "Empower agents to optimize posts for search performance and align content with your brand.",
         icon: Settings,
         iconClass:
            "relative flex aspect-square size-12 rounded-full border before:absolute before:-inset-2 before:rounded-full before:border dark:border-white/10 dark:before:border-white/10",
         title: "SEO & Content Customization",
      },
      right: {
         dots: false,
         icon: null,
         iconClass: "",
         wrapperClass:
            "before:bg-(--color-border) relative mt-6 before:absolute before:inset-0 before:mx-auto before:w-px sm:-my-6 sm:-mr-6",
      },
   },
];
---

<section class="bg-accent">
  <div class="flex flex-col items-center justify-center container mx-auto px-4 py-16 space-y-8">
    <div class="space-y-4 text-center">
      <h2 class="text-foreground text-4xl font-bold ">
        Build Your Own AI Content Team
      </h2>
      <p class="text-muted-foreground text-lg font-normal max-w-xl mx-auto">
        Create specialized AI agents with unique voices and expertise. Assign topics, SEO keywords, and styles to automate high-quality, on-brand content for any project. Scale production with ease and manage all agents in one place.
      </p>
    </div>
    <div>
      <div class="relative z-10 grid grid-cols-6 gap-4">
        <!-- Render top cards -->
        {_topCards.map((card) => (
          card.type === "customizable" ? (
            <div class="relative col-span-full flex overflow-hidden lg:col-span-2 bg-background rounded-2xl shadow-xl border border-foreground/10 p-4">
              <div class="relative size-fit space-y-4 w-full h-full flex flex-col">
                <div class="relative flex h-24 w-56 items-center">
                  <svg class="text-muted absolute inset-0 size-full" viewBox="0 0 254 104" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M112.891 97.7022C140.366 97.0802 171.004 94.6715 201.087 87.5116C210.43 85.2881 219.615 82.6412 228.284 78.2473C232.198 76.3179 235.905 73.9942 239.348 71.3124C241.85 69.2557 243.954 66.7571 245.555 63.9408C249.34 57.3235 248.281 50.5341 242.498 45.6109C239.033 42.7237 235.228 40.2703 231.169 38.3054C219.443 32.7209 207.141 28.4382 194.482 25.534C184.013 23.1927 173.358 21.7755 162.64 21.2989C161.376 21.3512 160.113 21.181 158.908 20.796C158.034 20.399 156.857 19.1682 156.962 18.4535C157.115 17.8927 157.381 17.3689 157.743 16.9139C158.104 16.4588 158.555 16.0821 159.067 15.8066C160.14 15.4683 161.274 15.3733 162.389 15.5286C179.805 15.3566 196.626 18.8373 212.998 24.462C220.978 27.2494 228.798 30.4747 236.423 34.1232C240.476 36.1159 244.202 38.7131 247.474 41.8258C254.342 48.2578 255.745 56.9397 251.841 65.4892C249.793 69.8582 246.736 73.6777 242.921 76.6327C236.224 82.0192 228.522 85.4602 220.502 88.2924C205.017 93.7847 188.964 96.9081 172.738 99.2109C153.442 101.949 133.993 103.478 114.506 103.79C91.1468 104.161 67.9334 102.97 45.1169 97.5831C36.0094 95.5616 27.2626 92.1655 19.1771 87.5116C13.839 84.5746 9.1557 80.5802 5.41318 75.7725C-0.54238 67.7259 -1.13794 59.1763 3.25594 50.2827C5.82447 45.3918 9.29572 41.0315 13.4863 37.4319C24.2989 27.5721 37.0438 20.9681 50.5431 15.7272C68.1451 8.8849 86.4883 5.1395 105.175 2.83669C129.045 0.0992292 153.151 0.134761 177.013 2.94256C197.672 5.23215 218.04 9.01724 237.588 16.3889C240.089 17.3418 242.498 18.5197 244.933 19.6446C246.627 20.4387 247.725 21.6695 246.997 23.615C246.455 25.1105 244.814 25.5605 242.63 24.5811C230.322 18.9961 217.233 16.1904 204.117 13.4376C188.761 10.3438 173.2 8.36665 157.558 7.52174C129.914 5.70776 102.154 8.06792 75.2124 14.5228C60.6177 17.8788 46.5758 23.2977 33.5102 30.6161C26.6595 34.3329 20.4123 39.0673 14.9818 44.658C12.9433 46.8071 11.1336 49.1622 9.58207 51.6855C4.87056 59.5336 5.61172 67.2494 11.9246 73.7608C15.2064 77.0494 18.8775 79.925 22.8564 82.3236C31.6176 87.7101 41.3848 90.5291 51.3902 92.5804C70.6068 96.5773 90.0219 97.7419 112.891 97.7022Z" fill="currentColor"/></svg>
                  <span class="mx-auto block w-fit text-5xl font-semibold">100%</span>
                </div>
                <div class="mt-auto space-y-4 text-center">
                  <h2 class="text-2xl font-semibold text-foreground">{card.title}</h2>
                  <p class="text-base text-muted-foreground">{card.description}</p>
                </div>
              </div>
            </div>
          ) : (
            <div class="relative col-span-full overflow-hidden sm:col-span-3 lg:col-span-2 bg-background rounded-2xl shadow-xl border border-foreground/10 p-4 flex flex-col h-full">
              <div class={card.iconWrapperClass + ' flex items-center justify-center'}>
                {card.icon && <card.icon class={card.iconClass} stroke-width="1" />}
              </div>
              <div class="relative z-10 mt-auto space-y-4 text-center">
                <h2 class="text-2xl font-semibold text-foreground">{card.title}</h2>
                <p class="text-base text-muted-foreground">{card.description}</p>
              </div>
            </div>
          )
        ))}
        <!-- Render bottom cards -->
        {_bottomCards.map((card, i) => (
          <div class="card variant-outlined relative col-span-full overflow-hidden lg:col-span-3 bg-background rounded-2xl shadow-xl border border-foreground/10 p-4">
            <div class="grid pt-6 sm:grid-cols-2 h-full">
              <div class="relative z-10 flex flex-col justify-between space-y-12 lg:space-y-6">
                <div class={card.left.iconClass}>
                  <card.left.icon class="m-auto size-6 text-primary" stroke-width="1" />
                </div>
                <div class="space-y-2">
                  <h2 class="text-2xl font-semibold text-foreground">{card.left.title}</h2>
                  <p class="text-base text-muted-foreground">{card.left.description}</p>
                </div>
              </div>
              <div class={card.right.wrapperClass ?? ""}>
                {card.right.dots && (
                  <div class="absolute left-3 top-2 flex gap-1">
                    <span class="block size-2 rounded-full border dark:border-white/10 dark:bg-white/10"></span>
                    <span class="block size-2 rounded-full border dark:border-white/10 dark:bg-white/10"></span>
                    <span class="block size-2 rounded-full border dark:border-white/10 dark:bg-white/10"></span>
                  </div>
                )}
                {card.right.icon && <card.right.icon class={card.right.iconClass} />}
                {i === 1 && (
                  <div class="relative flex h-full flex-col justify-center space-y-6 py-6">
                    <div class="relative flex w-[calc(50%+0.875rem)] items-center justify-end gap-2">
                      <span class="block h-fit rounded border px-2 py-1 text-xs shadow-sm">SEO</span>
                      <div class="ring-background size-7 ring-4">
                        <MessageCircle class="size-full rounded-full text-primary" />
                      </div>
                    </div>
                    <div class="relative ml-[calc(50%-1rem)] flex items-center gap-2">
                      <div class="ring-background size-8 ring-4">
                        <ListChecks class="size-full rounded-full text-primary" />
                      </div>
                      <span class="block h-fit rounded border px-2 py-1 text-xs shadow-sm">Formatting</span>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
