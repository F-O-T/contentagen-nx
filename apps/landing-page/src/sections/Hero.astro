---
import lightHero from "../assets/light/light-hero.webp";
import darkHero from "../assets/dark/dark-hero.webp";
import { Sparkles, ChevronRight, CirclePlay } from "@lucide/astro";
import { Badge } from "@packages/ui/components/badge";
import { Button } from "@packages/ui/components/button";
import LogoCloud from "../sections/LogoCloud.astro";
import { Image } from "astro:assets";
---

<main class="overflow-hidden">
  <section class="bg-gradient-to-b to-muted from-background ">
    <div class="relative py-24 container mx-auto px-8">
      <div class="relative z-10 mx-auto w-full max-w-5xl">

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-12 items-center">

          <div class="flex flex-col space-y-6 text-center md:text-left">
            <h1 class="text-3xl font-bold leading-tight md:text-4xl lg:text-5xl text-foreground">
              Publish Smarter: <span class="text-primary">AI-Powered Blog Posts</span> in Seconds
            </h1>

            <p class="text-base md:text-lg text-muted-foreground max-w-2xl mx-auto md:mx-0">
              Effortlessly generate SEO-optimized articles tailored for creators, marketers, and agencies. Save time, boost reach, and grow your audience with Contentagen.
            </p>

              <a href="https://app.contentagen.com/auth/sign-up" target="_blank" rel="noopener noreferrer">
                <Button size="lg" className="w-full  flex items-center justify-center gap-2" aria-label="Start creating AI-powered blog posts with Contentagen">
                  Start Creating
                  <ChevronRight />
                </Button>
              </a>

              <LogoCloud />
          </div>

          <div class="relative">
            <div class="perspective-near">
              <div class="before:border-foreground/5 before:bg-foreground/5 relative h-full before:absolute before:-inset-x-2 before:bottom-4 before:top-0 before:skew-x-3 before:rounded-lg before:border">
                <div class="bg-background rounded-lg shadow-foreground/10 ring-foreground/5 relative h-full -translate-y-6 skew-x-3 overflow-hidden border border-transparent shadow-md ring-1">
                  <Image
                    src={lightHero}
                    alt="Contentagen dashboard interface showing AI blog post generation in light mode"
                    class="object-cover object-top-left size-full block dark:hidden"
                    width={Number(lightHero.width)}
                    height={Number(lightHero.height)}
                    loading="eager"
                    fetchpriority="high"
                  />
                  <Image
                    src={darkHero}
                    alt="Contentagen dashboard interface showing AI blog post generation in dark mode"
                    class="object-cover object-top-left size-full hidden dark:block"
                    width={Number(darkHero.width)}
                    height={Number(darkHero.height)}
                    loading="eager"
                    fetchpriority="high"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</main>

