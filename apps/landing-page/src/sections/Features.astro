---

import { Picture } from "astro:assets";
import {
  Card,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@packages/ui/components/card";
import agentImage from "../assets/agent.png";

const features = [
  {
    description:
      "Define tone, audience, topics, and SEO keywords for content that fits your strategy perfectly.",
    title: "Custom AI Writing Agents",
  },
  {
    description:
      "Go from briefing to draft in under two minutes with automated content tailored to your needs.",
    title: "Fast Draft Generation",
  },
  {
    description:
      "Edit, comment, and export your posts to Markdown or DOCX in a single, streamlined interface.",
    title: "Seamless Editing & Export",
  },
];
---

<section class="container mx-auto p-4 flex flex-col items-center justify-center space-y-4">
  <div class="w-full mx-auto text-center">
    <h2 class="text-foreground text-4xl font-bold ">
      AI-Powered Blog Creation, Personalized for You
    </h2>
    <p class="text-muted-foreground text-lg font-normal ">
      Build, customize, and publish standout blog content in minutes with smart automation and agent-driven workflows.
    </p>
  </div>
    <Picture
      class="rounded-xl shadow-xl ring-2 ring-black/10 w-full max-w-4xl "
      formats={['webp']}
      src={agentImage}
      alt="Feature illustration"
    />
  <div class="grid gap-4 grid-cols-1 md:grid-cols-3 w-full ">
    {features.map(feature => (
      <Card >
        <CardHeader >
          <CardTitle >{feature.title}</CardTitle>
          <CardDescription >{feature.description}</CardDescription>
        </CardHeader>
      </Card>
    ))}
  </div>
</section>
