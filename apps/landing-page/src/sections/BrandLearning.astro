---
import {
   Card,
   CardHeader,
   CardTitle,
   CardDescription,
} from "@packages/ui/components/card";
import { Brain, Search, Database } from "@lucide/astro";

const features = [
   {
      icon: Search,
      title: "Deep Website Analysis",
      description:
         "Our system crawls your website to understand your business, products, and messaging, forming the foundation of your Brand Brain.",
   },
   {
      icon: Brain,
      title: "Brand Voice & Style DNA",
      description:
         "AI agents identify your unique tone, terminology, and stylistic patterns to create a brand voice profile that guides all content creation.",
   },
   {
      icon: Database,
      title: "Centralized Brand Brain",
      description:
         "All your brand knowledge is indexed, giving your AI agents instant, accurate recall for perfectly consistent content, every time.",
   },
];
---

<section id="brand-learning" class="py-16 md:py-24">
  <div class="mx-auto max-w-6xl px-6">
    <div class="grid gap-6 md:grid-cols-2 md:gap-12">
      <h2 class="text-3xl font-medium text-balance md:text-4xl">
        An AI That Truly <span class="text-primary">Understands Your Brand</span> 
      </h2>
      <div class="space-y-6">
        <p class="text-muted-foreground">
         ContentaGen goes beyond surface-level prompts. Our system performs a deep analysis of your website and brand documents to build a unique "Brand Brain."
        </p>
        <p>
          <span class="font-bold">This is deep brand intelligence.</span> This ensures every piece of content perfectly captures your voice, style, and business objectives, eliminating endless revisions and edits.
        </p>
      </div>
    </div>

    <div class="mt-16 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {features.map((feature) => (
        <Card
          variant="soft"
      >
        <CardHeader>
          <CardTitle className="flex gap-2 items-center">          
            <feature.icon class="text-primary size-5" />
            {feature.title}
          </CardTitle>
          <CardDescription>{feature.description}</CardDescription>
        </CardHeader>
        </Card>
      ))}
    </div>

  </div>
</section>
