---
import { Image } from "astro:assets";
import { Button } from "@packages/ui/components/button";
import githubImage from "../assets/integrations/github.png";

const logos = [
  {
    img: githubImage,
    name: "GitHub",
  },
];
---
<section class="flex flex-col items-center justify-center bg-accent h-full">
  <div class="container mx-auto p-4">
    <div class="flex flex-col items-center space-y-4 text-center">
      <div>
        <h2 class="text-foreground text-2xl font-semibold">Automate Your Blog Workflow</h2>
        <p class="text-muted-foreground max-w-xl ">Connect your favorite tools to automate content creation, export, and publishing.</p>
      </div>
        {logos.map(({ name, img }) => (
        <Button variant={"ghost"} className="px-4 py-8 bg-background rounded-full"  key={name}>
          <Image src={img} alt={name + ' logo'} class="h-10 w-10" />
        </Button>
        ))}
      </div>
    </div>
  </div>
</section>
