---
import { Quote } from "@lucide/astro";
import {
   Avatar,
   AvatarFallback,
   AvatarImage,
} from "@packages/ui/components/avatar";
import { Check, Star, Clock, Shield, Zap, Users } from "@lucide/astro";
---

<section class="relative py-16 md:py-32 bg-muted">
  <div class="mx-auto max-w-7xl px-6">

    <!-- Featured Testimonial -->
    <div class=" py-24 mb-16 rounded-2xl">
      <div class="mx-auto w-full max-w-2xl px-6 text-center">
        <div class="max-w-xl">
          <Quote className="fill-background stroke-background mx-auto size-8 drop-shadow-sm" />
          <blockquote class="mt-6">
            <p class="text-foreground text-xl">ContentaGen revolutionized our content creation process. The AI-powered multi-agent system delivers exceptional quality at unprecedented speed, enabling us to scale our content operations while maintaining our high editorial standards.</p>
            <footer class="mt-6 flex flex-col items-center justify-center">
      </div>
    </div>

  </div>
</section>
