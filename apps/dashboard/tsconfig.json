{
  "extends": "@tooling/typescript/vite.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@packages/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
  }
}
