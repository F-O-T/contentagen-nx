{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["{projectRoot}/**/*", "{projectRoot}/.env*"],
      "outputs": ["{projectRoot}/.next/**", "!{projectRoot}/.next/cache/**"]
    },
    "check-types": {
      "cache": true,
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^lint"]
    }
  },
  "tui": {
    "enabled": true
  }
}
