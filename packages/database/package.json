{
  "name": "@packages/database",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts",
    "./schema": "./src/schema.ts",
    "./schemas/*": "./src/schemas/*.ts",
    "./repositories/*": "./src/repositories/*.ts"
  },
  "scripts": {
    "env:copy-example": "shx -- cp -n .env.example .env",
    "env:remove": "shx -- rm -f .env",
    "env:run": "dotenv --",
    "check": "biome check --write ./src",
    "push": "bun run env:run drizzle-kit push",
    "migrate": "bun run env:run drizzle-kit migrate",
    "generate": "bun run env:run drizzle-kit generate --custom",
    "studio": "bun run env:run drizzle-kit studio",
    "typecheck": "tsc --build --noEmit --emitDeclarationOnly false",
    "build": "tsc --build --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "drizzle-orm": "catalog:database",
    "drizzle-zod": "catalog:database",
    "zod": "catalog:validation",
    "pg": "catalog:database"
  },
  "devDependencies": {
    "@tooling/typescript": "workspace:*",
    "@types/pg": "catalog:database",
    "dotenv-cli": "catalog:enviroment",
    "drizzle-kit": "catalog:database",
    "shx": "catalog:enviroment",
    "typescript": "catalog:development"
  }
}
