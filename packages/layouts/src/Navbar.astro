---

import { Button } from "@packages/ui/components/button";
import Logo from "./Logo.astro";
import MobileMenu from "./mobile-menu";
import ThemeToggler from "./ThemeToggler.astro";
import { menuItems } from "./menu-items";

interface MenuItem {
  href: string;
  name: string;
}

export interface Props {
  items?: MenuItem[];
}

const { items } = Astro.props;
const navItems: MenuItem[] = items ?? menuItems;
---
  <nav id="navbar" class="bg-muted">
    <div id="navbar-inner" class="container mx-auto  flex items-center justify-between gap-4 p-4 ">
        <Logo class="size-12 text-primary" />
        <ul class="flex-row  gap-4 items-center justify-center hidden md:flex mr-4">
          {navItems.map((item) => (
            <li class="text-muted-foreground hover:text-primary transition-colors duration-150">
              <a href={item.href} class="hover:text-primary transition-colors duration-150">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      <div class="flex items-center gap-4 ml-auto">
          <ThemeToggler />
          <MobileMenu client:only="react" />
          <Button id="get-started-btn" className="hidden md:inline">Enter waitlist</Button>
        </div>
    </div>
  </nav>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const navbarBtn = document.getElementById('get-started-btn');
      if (navbarBtn) {
        navbarBtn.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.getElementById('cta-section');
          if (target) {
            target.scrollIntoView({ behavior: 'smooth' });
          }
        });
      }
    });
  </script>